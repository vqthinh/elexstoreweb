@{
    Layout = null;
}
@model ELEXStore.Areas.Admin.Models.LoginModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='~/Content/Admin/Layout/css/fullcalendar.css'>
    <link rel='stylesheet' href='~/Content/Admin/Layout/css/datatables/datatables.css'>
    <link rel='stylesheet' href='~/Content/Admin/Layout/css/datatables/bootstrap.datatables.css'>
    <link rel='stylesheet' href='~/Content/Admin/Layout/scss/chosen.css'>
    <link href="~/Content/Admin/Layout/scss/font-awesome/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Admin/Layout/css/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel='stylesheet' href='~/Content/Admin/Layout/css/app.css'>
    <link href="~/Content/Admin/Layout/favicon.ico" rel="shortcut icon">
    <link href="~/Content/Admin/Layout/apple-touch-icon.png" rel="apple-touch-icon">
    

    <title>ELEX Store</title>
</head>
<body>

<div class="all-wrapper no-menu-wrapper">
    <div class="login-logo-w">
        <a href="../../" class="logo">
            <i class="icon-cloud-download"></i>
            <span>ELEX Admin</span>
        </a>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="content-wrapper bold-shadow wood-wrapper">
                <div class="content-inner">
                    <div class="main-content main-content-grey-gradient no-page-header">
                        <div class="main-content-inner">
                            @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data", id = "form-login" }))
                            {
                                <h3 class="form-title form-title-first">
                                    <i class="icon-lock"></i> Login 
                                </h3>
                                if (TempData["AlertMessage"] != null)
                                {
                                    <div id="AlertBox" class="alert @TempData["AlertType"]">
                                        @TempData["AlertMessage"]
                                    </div>
                                }
                                <div class="form-group">
                                    <label>Username</label>
                                    @Html.TextBoxFor(model => model.UserName, new {@class = "form-control", @name = "UserName"})
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    @Html.PasswordFor(model => model.Password, new {@class = "form-control",@name="Password"})
    
                                </div>
                                <button type="submit" onclick="form.action = '/Admin/Login/Login'" class="btn btn-primary">Login</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
    <script src="~/Scripts/jquery-1.12.1.min.js"></script>
    <script src="~/Content/JS/Plugin/BootstrapValidator/js/bootstrapValidator.min.js"></script>
    <script src='~/Content/Admin/Layout/js/jquery.sparkline.min.js'></script>
    <script src='~/Content/Admin/Layout/js/bootstrap/tab.js'></script>
    <script src='~/Content/Admin/Layout/js/bootstrap/dropdown.js'></script>
    <script src='~/Content/Admin/Layout/js/bootstrap/collapse.js'></script>
    <script src='~/Content/Admin/Layout/js/bootstrap/transition.js'></script>
    <script src='~/Content/Admin/Layout/js/bootstrap/tooltip.js'></script>
    <script src='~/Content/Admin/Layout/js/jquery.knob.js'></script>
    <script src='~/Content/Admin/Layout/js/fullcalendar.min.js'></script>
    <script src='~/Content/Admin/Layout/js/datatables/datatables.min.js'></script>
    <script src='~/Content/Admin/Layout/js/chosen.jquery.min.js'></script>
    <script src='~/Content/Admin/Layout/js/datatables/bootstrap.datatables.js'></script>
    <script src='~/Content/Admin/Layout/js/raphael-min.js'></script>
    <script src='~/Content/Admin/Layout/js/morris-0.4.3.min.js'></script>
    <script src='~/Content/Admin/Layout/js/for_pages/color_settings.js'></script>
    <script src='~/Content/Admin/Layout/js/application.js'></script>
    <script src='~/Content/Admin/Layout/js/for_pages/dashboard.js'></script>
    <script src="~/Content/JS/Plugin/ckfinder/ckfinder.js"></script>
    <script src="~/Content/Admin/Layout/css/bootstrap/js/bootstrap.min.js"></script>
    <script>
    $('#form-login').bootstrapValidator({
        message: 'This value is not valid',
        feedbackIcons: {
            valid: 'icon icon-ok',
            invalid: 'icon icon-remove',
            validating: 'icon icon-refresh'
        },
        fields: {
            UserName: {
                validators: {
                    notEmpty: {
                        message: 'UserName is required'
                    }
                }
            },
            Password: {
                validators: {
                    notEmpty: {
                        message: 'Password is required'
                    }
                }
            }
        }
    });

    </script>

</body>
</html>